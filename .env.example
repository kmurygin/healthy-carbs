# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/healthy_carbs
DB_USERNAME=
DB_PASSWORD=

# Postgres db docker container configuration
POSTGRES_DB=healthy_carbs
POSTGRES_USER=${DB_USERNAME}
POSTGRES_PASSWORD=${DB_PASSWORD}

# JWT Configuration
# Generate a secure 256-bit secret key (64 hex characters)
# You can generate one using: openssl rand -hex 32
JWT_SECRET_KEY=

# Email Configuration
# Configure your SMTP settings for sending emails
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# Spring Profile
# Available profiles: dev, prod
SPRING_PROFILES_ACTIVE=dev

# PayU Payment Integration
PAYU_BASE_URL=
PAYU_POS_ID=
PAYU_CLIENT_ID=
PAYU_CLIENT_SECRET=
PAYU_SECOND_KEY=
PAYU_NOTIFY_URL=
PAYU_CONTINUE_URL=
PAYU_CURRENCY=PLN

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200

# Google Cloud Storage (set to true for prod, false for local dev)
GCP_PROJECT_ID=
GCS_BUCKET_NAME=
# Optional: override public URL base (e.g. https://storage.googleapis.com/my-bucket)
GCS_PUBLIC_URL_BASE=
GCP_STORAGE_ENABLED=false
GCP_CORE_ENABLED=false
# Path to service account JSON for local development
GOOGLE_APPLICATION_CREDENTIALS=
GCS_CACHE_CONTROL=public, max-age=1209600

# Local storage (dev profile)
LOCAL_UPLOAD_DIR=uploads
LOCAL_BASE_URL=/api/v1/files
